<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <rules>
        <fullName>Created License of Business email and Sandbox Flosum at Trial</fullName>
        <active>true</active>
        <description>Logic validate is Business Email in Leads == true
(Used Business email) AND Lead isn&apos;t created becouse of sandbox refresh
Created in Sandbox for Flosum Licenses Trial</description>
        <formula>AND(sfLma__Lead__r.Business_Email__c, 
!CONTAINS(  TEXT( sfLma__Lead__r.LeadSource ), &quot;-dup-&quot;), 
sfLma__Seats__c != -1,  
sfLma__License_Status__c == &quot;Trial&quot;,  ISPICKVAL(FlosumStatus__c, &quot;Flosum - Trials to be tracked&quot;))</formula>
        <triggerType>onCreateOnly</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Sending_Flosum_email_ufter_10_min</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>sfLma__License__c.Send_Email_for_10min__c</offsetFromField>
            <timeLength>1</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
        <workflowTimeTriggers>
            <actions>
                <name>Sending_Flosum_email_after_3_5_hour</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>sfLma__License__c.Send_Email_for_0_5__c</offsetFromField>
            <timeLength>3</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
        <workflowTimeTriggers>
            <actions>
                <name>Sending_Flosum_email_after_5_5_hour</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>sfLma__License__c.Send_Email_for_0_5__c</offsetFromField>
            <timeLength>5</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
</Workflow>